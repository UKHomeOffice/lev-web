FROM node:12

RUN addgroup --system app \
 && adduser --system --home /app/ --uid 31337 --ingroup app app \
 && chown -R app:app /app/ \
 && apt-get update --quiet -y \
 && apt-get upgrade --quiet -y \
 && apt-get install ca-certificates --quiet -y
 && apt-get install g++ build-essential

USER app
WORKDIR /app
ENV NODE_ENV ci

COPY *node_modules/ package.json package-lock.json .snyk /app/
RUN npm ci > .npm-install.log 2>&1 \
 && rm .npm-install.log \
 || ( EC=$?; cat .npm-install.log; exit $EC )

COPY . /app

RUN npm run postinstall

USER 31337
ENTRYPOINT [ "npm", "run" ]
CMD [ "test:ci" ]
