{
  "name": "lev-web",
  "description": "Life Event Verification Web Interface",
  "version": "0.0.1",
  "main": "app.js",
  "scripts": {
    "start": "node .",
    "stop": "pkill levweb",
    "dev": "npm run mock-kc-proxy & NODE_ENV=development nodemon .",
    "mock-kc-proxy": "RUN_KC_PROXY=true node test/acceptance/mock-kc-proxy/index.js",
    "test": "npm run test:unit && npm run test:acceptance",
    "test:unit": "NODE_ENV=test mocha ./test/unit",
    "test:acceptance": "npm run start:mockapi & NODE_ENV=acceptance npm start & npm run chimp && npm run stop:all",
    "install:mockapi": "./api/mock/get_latest_api_spec.sh && cd api/mock/lev-api-docs && npm install --quiet",
    "start:mockapi": "cd api/mock/lev-api-docs && ./node_modules/drakov/drakov -f lev-api.md -p 8080 --discover --stealthmode; echo",
    "stop:mockapi": "fuser -k 8080/tcp",
    "stop:all": "npm stop && npm run stop:mockapi",
    "chimp": "NODE_ENV=acceptance chimp --mocha --browser=htmlunit --path=./test/acceptance/",
    "chimp:dev": "NODE_ENV=acceptance chimp --mocha --path=./test/acceptance/ --watch --browser=firefox",
    "lint": "eslint .",
    "style": "jscs **/*.js --config=./.jscsrc.json",
    "sass": "node-sass ./assets/scss/app.scss ./public/css/app.css --include-path ./node_modules",
    "create:public": "mkdir -p ./public/css",
    "postinstall": "npm run create:public; npm run sass"
  },
  "dependencies": {
    "body-parser": "^1.14.1",
    "churchill": "0.0.5",
    "express": "^4.13.3",
    "express-partial-templates": "^0.1.0",
    "express-session": "^1.12.1",
    "hmpo-frontend-toolkit": "^3.1.1",
    "hmpo-govuk-template": "0.0.3",
    "hogan-express-strict": "^0.5.4",
    "moment": "^2.10.6",
    "mustache": "^2.2.0",
    "nodemon": "^1.8.1",
    "request": "^2.67.0",
    "underscore": "^1.8.3",
    "winston": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "chai-as-promised": "^5.3.0",
    "chimp": "^0.34.0",
    "eslint": "^0.23.0",
    "eslint-plugin-filenames": "^0.1.1",
    "eslint-plugin-mocha": "^0.2.2",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "express-hijackresponse": "^0.2.1",
    "http-proxy": "^1.12.0",
    "jscs": "^3.0.2",
    "mocha": "^2.3.4",
    "node-sass": "^3.6.0",
    "proxyquire": "^1.7.3",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0"
  }
}
