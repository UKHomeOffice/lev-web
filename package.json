{
  "name": "lev-web",
  "description": "Life Event Verification Web Interface",
  "version": "0.0.1",
  "main": "app.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon .",
    "test": "NODE_ENV=test mocha",
    "lint": "eslint .",
    "style": "jscs **/*.js --config=./.jscsrc.json",
