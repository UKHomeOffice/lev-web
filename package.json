{
  "name": "lev-web",
  "description": "Life Event Verification Web Interface",
  "version": "0.0.1",
  "main": "app.js",
  "scripts": {
    "start": "node .",
    "stop": "pkill levweb",
    "dev": "npm run mock-kc-proxy & NODE_ENV=development nodemon .",
    "mock-kc-proxy": "node test/acceptance/mock-kc-proxy/front.js &",
    "stop:mock-kc-proxy": "killall lev-keycloak-proxy",
    "test": "npm run lint && npm run cover && npm run check-coverage",
    "test:unit": "NODE_ENV=test mocha ./test/unit",
    "test:acceptance": "npm run install:mockapi && npm run start:mocks && npm run chimp; RES=$?; npm run stop:all > /dev/null 2>&1; exit $RES",
    "drone:acceptance": "npm run mock-kc-proxy && npm run chimp; RES=$?; npm run stop:mock-kc-proxy; exit $RES",
    "start:acceptance": "NODE_ENV=acceptance npm start",
    "install:mockapi": "docker pull quay.io/ukhomeofficedigital/lev-api-mock",
    "start:mockapi": "docker run --rm -p 8080:8080 --name lev-api-mock -d quay.io/ukhomeofficedigital/lev-api-mock:v1.2.0-309-f083cc348f6d60b7c5911739d7bcf299a93eb6fa",
    "stop:mockapi": "docker kill lev-api-mock; exit 0",
    "test:all": "npm run lint && npm run cover && npm run check-coverage && npm npm run test:acceptance",
    "start:mocks": "npm run start:mockapi > /dev/null 2>&1 & npm run mock-kc-proxy",
    "stop:all": "npm run stop:mockapi & npm stop & npm run stop:mock-kc-proxy",
    "chimp": "NODE_ENV=acceptance chimp --mocha --browser=phantomjs --path=./test/acceptance/spec/",
    "chimp:ff": "NODE_ENV=acceptance chimp --mocha --path=./test/acceptance/ --watch --browser=firefox",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "cover": "istanbul cover _mocha -- ./test/unit",
    "check-coverage": "istanbul check-coverage --statement 95 --branch 85 --function 100 --line 95",
    "sass": "node-sass ./assets/scss/app.scss ./public/css/app.css --include-path ./node_modules",
    "copy:images": "cp -r ./assets/images ./public/",
    "uglify": "browserify -g uglifyify ./assets/js/index.js > ./public/js/bundle.js",
    "browserify": "browserify ./assets/js/index.js > ./public/js/bundle.js",
    "create:public": "mkdir -p ./public/css ./public/images ./public/js",
    "postinstall": "npm run create:public && npm run sass && npm run copy:images && npm run uglify",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "dependencies": {
    "body-parser": "^1.14.1",
    "browserify": "^13.0.1",
    "churchill": "0.2.0",
    "express": "^4.13.3",
    "express-partial-templates": "^0.1.0",
    "express-session": "^1.12.1",
    "hof": "^8.0.0",
    "hogan-express-strict": "^0.5.4",
    "hogan.js": "^3.0.2",
    "lodash": "^4.13.1",
    "moment": "^2.10.6",
    "moment-round": "^1.0.1",
    "node-sass": "^3.7.0",
    "request": "^2.67.0",
    "uglifyify": "^3.0.1",
    "winston": "^1.0.1",
    "snyk": "^1.19.1"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "chai-as-promised": "^5.3.0",
    "eslint": "^3.4.0",
    "eslint-plugin-filenames": "^1.0.0",
    "eslint-plugin-mocha": "^4.5.0",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "istanbul": "^0.4.3",
    "jscs": "^3.0.2",
    "mocha": "^3.0.2",
    "nodemon": "^1.8.1",
    "proxyquire": "^1.7.3",
    "reqres": "^1.2.2",
    "rewire": "^2.5.2",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0"
  },
  "optionalDependencies": {
    "chimp": "^0.42.0",
    "http-proxy": "^1.15.2"
  },
  "snyk": true
}
