  "devDependencies": {
    "chai": "^3.4.1",
    "eslint": "^0.23.0",
    "eslint-plugin-filenames": "^0.1.1",
    "eslint-plugin-mocha": "^0.2.2",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "jscs": "^1.13.1",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "proxyquire": "^1.7.3",
    "sinomocha": "^0.2.4",
